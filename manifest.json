{
  "manifest_version": 2,
  "name": "SteGOG",
  "version": "0.0.8",
  "description": "Display games owned on Steam in GOG",

  "icons": {
    "48": "icons/stegog-48.png"
  },
  "options_ui": {
    "page": "src/options.html",
    "browser_style": true
  },
  "permissions": [
    "*://api.steampowered.com/*",
    "*://api.isthereanydeal.com/*",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.gog.com/*"],
      "js": [
        "src/bluebird.min.js",
        "src/lodash.min.js",
        "src/browser-polyfill.min.js",
        "src/stegog.js"
      ],
      "css": ["src/stegog.css"]
    }
  ],
  "applications": {
    "gecko": {
      "id": "stegog@ugzuzg.com.amo"
    }
  },
  "web_accessible_resources": [
    "images/g99.png"
  ]
}
